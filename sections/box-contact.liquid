            {%- assign bk_stts = block.settings -%}
                <div class="bee-col-item" style="--fs-heading: {{ se_stts.heading_fs }}px; --mb-heading: {{ se_stts.mb_heading_contact }}px; --cl-heading: {{ se_stts.cl_heading_contact }}; --fw-heading: {{se_stts.heading_fw}}; --ls-heading: {{se_stts.heading_ls}}px; --lh-heading: {{se_stts.heading_lh}}px; --fs: {{se_stts.fs}}px; --fw: {{ se_stts.fw }}; --ls: {{bk_stts.ls}}px; --lh: {{se_stts.lh}}px; --cl: {{ se_stts.cl_text_contact }}; --cl-icon: {{ se_stts.cl_icon_contact }}; --mb: {{se_stts.mb_box_contact}}px">
