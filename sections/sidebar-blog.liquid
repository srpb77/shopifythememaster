
{%- liquid 
    assign se_stts     = section.settings
    assign sid       = section.id
    assign design_mode = request.design_mode
    assign loadContent = false
    if content_for_header contains '\u0026section_id=' or content_for_header contains '?section_id='
        assign loadContent = true
    endif
    assign sidebar_size     = se_stts.size
    assign isSidebarDrawer  = se_stts.enable_drawer 
    
 -%}  
{%- if loadContent or design_mode -%}
    
    <template class="bee-d-none ">
    [beeplitlz]
        <link rel="stylesheet" href="{{ 'bee-widget.css' | asset_url }}" media="all">
        {%- if section.blocks.size > 0 -%}
            <div class="bee-sidebar-inner bee-sidebar-blog bee-current-scrollbar bee-accordion-{{ accordion_sidebar }} bee-drawer-{{ isSidebarDrawer }} {% if accordion_sidebar %} bee-type-accordion{% endif %} bee-heading-transform-{{se_stts.heading_uppercase}}" data-bee-tabs>
                <div class="bee-row bee-row-cols-1 bee-gx-0" style="--fs: {{se_stts.fs_heading}}px; --fw: {{se_stts.fw_heading}}; --cl: {{se_stts.cl_heading_sidebar}}; --space: {{ se_stts.space }}px">
                    {%- for block in section.blocks -%}
                        {%- assign bk_stts = block.settings -%}
                        {%- case block.type -%}
                            {%- when 'blog_search' -%}
                                <div class="bee-col-item bee-widget bee-widget-blog-search">
                                    {%- if bk_stts.title != blank -%}
                                        <div class="bee-widget-heading">
                                            <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="bee-widget-inner">
                                        <form data-frm-search action="{{ routes.search_url }}" method="get" class="bee-search-sidebar__form bee-align-items-center bee-pr bee-oh" role="search">
                                            <input type="hidden" name="type" value="article">
                                            <input type="hidden" name="options[prefix]" value="last">
                                            <input data-input-search class="bee-search-sidebar__input bee-input__currentcolor" autocomplete="off" type="text" name="q" placeholder="Search the blog">
                                            <button class="bee-search-sidebar__submit" type="submit"><svg class="bee-icon bee-icon--search" aria-hidden="true" focusable="false" role="presentation"><use href="#icon-h-search"></use></svg></button>
                                        </form> 
                                    </div>
                                </div>
                            {%- when 'blog_cate' -%}
                                {%- assign top_link_list = bk_stts.cat_link_list -%}
                                {%- if top_link_list == blank -%}<p>{{ 'onboarding.no_content' | t }}</p>{% continue %}{% endif -%}
                                    <div class="bee-col-item bee-widget bee-widget-blog-category bee-cat-count-{{ bk_stts.count }}">
                                        {%- if bk_stts.title != blank -%}
                                            <div class="bee-widget-heading">
                                                <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                            </div>
                                        {%- endif -%}
                                        <div class="bee-widget-inner">
                                            <ul class="bee-blog-categories">
                                                {%- for link in linklists[top_link_list].links -%}
                                                {%- if link.type != 'blog_link' %}{% continue %}{% endif -%}
                                                    <li class="bee-blog-cat__item bee-pr{%- if link.active %} bee-current-cat{%- endif -%}">
                                                        <a href="{{ link.url }}">{%- render 'title_menu2', title: link.title -%} <span class="bee-cat-count"> {{ link.object.articles_count }}</a></span>
                                                    </li>
                                                {%- endfor -%}
                                            </ul>
                                        </div>
                                    </div>
                            {%- when 'gallery' -%}
                                {%- liquid
                                    assign open_link = bk_stts.open_link
                                    assign ARRhtml1 = 'a,,' | split: ','
                                    assign ARRhtml2 = 'div,data-' | split: ',' -%}
                                <div id="bee-sidebar-{{ block.id }}" class=" bee-col-item bee-widget bee-widget-gallery bee-tab-wrapper bee-active" data-bee-tab-wrapper data-no-auto-close {{ block.shopify_attributes }}>
                                    {%- if bk_stts.heading != blank -%}
                                        {% if accordion_sidebar %} 
                                        <a id="btn_{{block.id}}" class="bee-widget-title" href="#b_{{block.id}}" rel="nofollow" data-bee-tab-item data-no-instant> {{ bk_stts.heading }}
                                            <svg version="1.1" x="0px" y="0px" width="18px" height="18px" viewBox="0 0 18 18" style="enable-background:new 0 0 18 18;" xml:space="preserve"><polygon points="4,6 14,6 9,12 "></polygon></svg>
                                        </a>
                                        {% else %}
                                        <h5 class="bee-widget-title">{{ bk_stts.heading }}</h5>
                                        {% endif %}
                                    {%- endif -%}   
                                    <div id="b_{{block.id}}"  class=" bee_position_8 bee_cover bee-tab-content" data-bee-tab-content style="display: block;">
                                        <div class="bee-row bee_ratio1_1 bee-row-cols-{{ bk_stts.col_dk }} bee-row-cols-md-{{ bk_stts.col_dk }} bee-row-cols-lg-{{ bk_stts.col_dk }} bee-gx-{{ bk_stts.space_item }} bee-gy-{{ bk_stts.space_item}}">
                                            {%- for i in (1..9) -%}
                                                {%- liquid
                                                    assign image_list = 'img' | append: i 
                                                    assign image_url_list = 'link' | append: i 
                                                    assign url = bk_stts[image_url_list]
                                                    assign image = bk_stts[image_list] 
                                                    if url == blank 
                                                        assign ARRhtml = ARRhtml2
                                                    else 
                                                        assign ARRhtml = ARRhtml1  
                                                    endif  
                                                -%}                                               
                                                {%- if image != blank -%}
                                                    <div class="bee-col-item bee-gallery-item">
                                                        <{{ ARRhtml[0] }} {{ ARRhtml[1] }}href="{{ url }}" {{ ARRhtml[2] }}target="{{ open_link }}" class="bee-effect bee-pr bee-oh bee-d-block">
                                                            <div class="bee_ratio" style="background: url({{ image | image_url: width: 1 }});">
                                                                <img class="lazyloadbee" data-src="{{ image | image_url: width: 1 }}" data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="{% render 'img_svg', w: image.width, h: image.height %}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}">
                                                            </div>
                                                        </{{ ARRhtml[0] }}>
                                                    </div>  
                                                {%- endif -%}                                            
                                            {%- endfor -%}
                                        </div>
                                    </div>
                                    {%- style -%}
                                        #bee-sidebar-{{ block.id }} .bee-gallery-item .bee_ratio{border-radius: {{ bk_stts.round }}%} 
                                    {%- endstyle -%}
                                </div>
                            {%- when 'post' -%} 
                            
                                {%- if bk_stts.blog == blank -%}<p>{{ 'onboarding.no_content' | t }}</p>{% continue %}{%- endif -%} 
                                <div class="bee-col-item bee-widget bee-sidebar-blog-post">
                                    {%- if bk_stts.title != blank -%}
                                        <div class="bee-widget-heading">
                                            <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                   {%- liquid  
                                        assign blog = blogs[bk_stts.blog]
                                        assign blog_url = blog.url
                                        assign blog_title = blog.title
                                        
                                        assign limit = se_stts.limit
                                        assign date_format = bk_stts.date
                                               assign show_blog_title = bk_stts.show_blog_title 
                                               assign show_date = bk_stts.show_date 
                                    -%}
                                    <div class="bee-widget-inner"> 
                                        <div class="bee-sidebar-post__list bee-oh {{ bk_stts.image_ratio }} {{ bk_stts.image_position }} {{ bk_stts.image_size }} ">
                                            {%- for article in blogs[bk_stts.blog].articles limit: bk_stts.limit_post -%}

                                                {%- render 'article_loop_item', article: article, show_date: show_date, image_ratio: bk_stts.image_ratio, image_position: bk_stts.image_position, image_size: bk_stts.image_size, blog_url: blog_url, blog_title: blog_title, date_format: date_format, show_blog_title: show_blog_title -%}
                                            {%- endfor -%}
                                        </div>
                                    </div> 
                                </div>                         
                            {%- when 'newsletter' -%}
                                <div class="bee-col-item bee-widget bee-sidebar-newsletter">
                                    {%- if bk_stts.title != blank -%}
                                        <div class="bee-widget-heading"> 
                                            <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="bee-widget-inner">
                                        {%- if bk_stts.description != blank -%}
                                            <p class="bee-sidebar-newsletter__description" >{{ bk_stts.description }}</p>
                                           {%- assign newl_des = bk_stts.newl_des -%}
                                            {%- assign newsletter = true -%}
                                            {%- assign custom_button = true -%}
                                            <div id="b_{{ block.id }}" class="bee-newsletter-parent bee-custom-width-{{ bk_stts.custom_width }} bee_newsletter_se bee-newsl-des-{{ newl_des }} bee-newsl-layout-{{ newl_des }}  bee-newsl-{{ bk_stts.newl_size }} bee-has-btn-{{ bk_stts.source_btn }}" {%- render 'bk_cus_style',type: 'newsletter', bk_stts: bk_stts -%}>
                                                {%- render 'newsletter',layout: newl_des,form_id: block.id,source_btn: bk_stts.source_btn,buttonIcon: 'letters' -%}
                                                {%- if bk_stts.sub_newsl -%}
                                                    <p class="bee-sub-newsl">{{ bk_stts.sub_newsl }}</p>
                                                {%- endif -%}
                                            </div>  
                                        {%- endif -%} 
                                    </div>
                                </div>
                            {%- when 'instagram' -%}
                                {%- liquid
                                    assign limit = bk_stts.limit
                                    if bk_stts.mode == '1' 
                                        assign acc = bk_stts.acc | default: settings.global_acc
                                    else
                                        assign acc = 'ins_19041994'
                                    endif -%}
                                <div class="bee-col-item bee-widget bee-widget-instagram">
                                    {%- if bk_stts.title != blank -%}
                                        <div class="bee-widget-heading"> 
                                            <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="bee-widget-inner">
                                        <div class="bee-row bee_ratio1_1 bee_position_8 bee_cover bee-row-cols-{{ bk_stts.col_dk }} bee-row-cols-md-{{ bk_stts.col_dk }} bee-row-cols-lg-{{ bk_stts.col_dk }} bee-gx-{{ bk_stts.space_item }} bee-gy-{{ bk_stts.space_item }}" data-insbee-options='{ "id": "{{ bk_stts.col_dk }}{{ bk_stts.col_tb }}{{ bk_stts.col_mb }}{{ bk_stts.limit }}{{ bk_stts.open_link }}","limit": {{ limit }}, "acc": {{ acc | base64_encode | json }}, "target": "{{ bk_stts.open_link }}" }'><div class="bee-loading--bg"></div></div>
                                        <template class="bee-icons-ins-svg"><svg class="bee-svg-ins-image" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22,15.5,18.55,11a2,2,0,0,0-3.14,0L12,15.27a2,2,0,0,1-3,.18l-1.1-1.07a2,2,0,0,0-2.81,0L2,17.5V20a2,2,0,0,0,2,2H20a2,2,0,0,0,2-2Z"></path><rect x="2" y="2" width="20" height="20" rx="2"></rect><line x1="6.99" y1="7" x2="7" y2="7" stroke-linecap="round" stroke-width="2.5"></line></svg>[beeplit]<svg class="bee-svg-ins-video" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="5" width="14" height="14" rx="2"></rect><path d="M16,10l4.55-2.28a1,1,0,0,1,1.45.9v6.76a1,1,0,0,1-1.45.9L16,14" stroke-linecap="round"></path></svg>[beeplit]<svg class="bee-svg-ins-album" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="14" height="14" rx="2"></rect><path d="M20,22H10a2,2,0,0,1-2-2V16h6a2,2,0,0,0,2-2V8h4a2,2,0,0,1,2,2V20A2,2,0,0,1,20,22Z"></path></svg></template>
                                    </div>
                                    {%- style -%}
                                        #bee-sidebar-{{ block.id }} .bee-col-ins a{border-radius: {{ bk_stts.round }} %} 
                                    {%- endstyle -%}
                                </div> 
                            {%- when 'text' -%}
                                <div class="bee-col-item bee-widget bee-sidebar-text">
                                    {%- if bk_stts.title != blank -%}
                                        <div class="bee-widget-heading"> 
                                            <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="bee-widget-inner">
                                        {%- if bk_stts.text_html != blank -%}{{ bk_stts.text_html }}{%- endif -%}
                                    </div>
                                </div>
                            {%- when 'html' -%}
                                <div class="bee-col-item bee-widget bee-sidebar-html bee-rte--list">
                                    {%- if bk_stts.title != blank -%}
                                        <div class="bee-widget-heading">
                                            <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="bee-widget-inner">
                                        {%- if bk_stts.custom_html != blank -%}{{ bk_stts.custom_html }}{%- endif -%}
                                    </div>
                                </div>
                            {%- when 'custom_liquid' -%}
                                <div class="bee-col-item bee-widget bee-sidebar-custom-liquid">
                                    {%- if bk_stts.title != blank -%}
                                        <div class="bee-widget-heading">
                                            <h5 class="bee-widget-title">{{ bk_stts.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="bee-widget-inner">
                                        {%- if bk_stts.custom_liquid != blank -%}{{ bk_stts.custom_liquid }}{%- endif -%}
                                    </div>
                                </div>
                        {%- endcase -%}  
                    {%- endfor -%}
                </div>
            </div>
        {%- else -%}
            <span class="bee-onboarding-info">{{ 'onboarding.no_content' | t }}</span>
        {%- endif -%}
    [beeplitlz]
        <link rel="stylesheet" href="{{ 'bee-drawer.min.css' | asset_url }}" media="all">
        <link rel="stylesheet" href="{{ 'bee-widget.css' | asset_url }}" media="all">
        <div id="drawer-{{ sid }}" class="bee-drawer bee-drawer__left bee-sidebar-blog-drawer" aria-hidden="true">
            <div class="bee-drawer__header"><span>{{ 'general.sidebar.title' | t }}</span><button class="bee-drawer__close" data-drawer-close aria-label="{{ 'general.sidebar.close' | t }}"><svg class="bee-iconsvg-close" role="presentation" viewBox="0 0 16 14"><path d="M15 0L1 14m14 0L1 0" stroke="currentColor" fill="none" fill-rule="evenodd"></path></svg></button></div>
            <div class="bee-drawer__content">
                <div class="bee-drawer__main bee-current-scrollbar">[beeplitlz2]</div>
                <div class="bee-drawer__footer"></div>
            </div>
        </div>     
    [beeplitlz]
    </template>
{%- endif -%}
<button data-sidebar-id='{{ sid }}' data-sidebar-{{ isSidebarDrawer }} data-drawer-options='{ "id": "#drawer-{{ sid }}" }' class="bee-btn-sidebar"><span class="bee-btn-sidebar-icon"><svg viewBox="0 0 24 24" width="22" height="22" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="9" y1="3" x2="9" y2="21"></line></svg></span> <span class="bee-btn-sidebar-text">{{ 'general.sidebar.open' | t }}</span></button>
<style>
    .bee-sidebar-blog-parent button.bee-drawer__close {

    }
    button.bee-btn-sidebar {
        position: fixed;
        top: 50%;
        z-index: 100;
        background-color: var(--bee-light-color);
        color:  var(--bee-dark-color);
        box-shadow: 0 0 3px rgb(0 0 0 / 15%);
        transition: all .6s cubic-bezier(.19,1,.22,1);
        display: flex;
        align-items: center;
        flex-direction: row;
        flex-wrap: nowrap;
        overflow: hidden;
        min-width: 50px;
        height: 50px;
        padding: 0;
    }
    .bee-btn-sidebar .bee-btn-sidebar-icon {
        width: 50px;
        height: 50px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
    }
    .bee-btn-sidebar .bee-btn-sidebar-text {
        padding: 0;
        max-width:0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-weight: 500;
        will-change: padding, max-width;
        transition: padding 0.4s cubic-bezier(.175,.885,.32,1.15),max-width 0.4s cubic-bezier(.175,.885,.32,1.15);
    }
    .bee-btn-sidebar:hover .bee-btn-sidebar-text {
        padding-right: 25px;
        max-width:280px;
    }
    .bee-sidebar-inner .bee-widget:not(:last-child){margin-bottom: {{ se_stts.space }}px; }
    #drawer-{{ sid }} .bee-drawer__main{overflow-x: hidden;padding: 20px;}
    {%- unless isSidebarDrawer %}
    @media screen and (min-width: 1025px) {
        .bee-sidebar { display: block }
        button.bee-btn-sidebar,.bee-section-sidebar{display: none;}
        {%- if sidebar_size == 'small' -%}
        .bee-main-area {flex: 0 0 auto;width: 83.33333333%; }.bee-sidebar {flex: 0 0 auto;width: 16.66666667%; }
        {%- elsif sidebar_size == 'medium' -%}
        .bee-main-area {flex: 0 0 auto;width: 75%; }.bee-sidebar {flex: 0 0 auto;width: 25%; }
        {%- else -%}
        .bee-main-area {flex: 0 0 auto;width: 66.66666667%; }.bee-sidebar {flex: 0 0 auto;width: 33.33333333%; }
        {%- endif -%} 
    }
    .bee-section-sidebar ~ .bee-section-main .bee-main-area{order: 10}
    .bee-section-sidebar ~ .bee-section-main .bee-sidebar{order: 1}
    {% endunless -%}
    {% if se_stts.br_style != 'none' and isSidebarDrawer == false -%}
    /* css border conffig */
    .bee-sidebar-inner {
        border: 1px {{ se_stts.br_style }} {{ se_stts.brcolor }};
        padding: {{ se_stts.sidebar_pd }}px;
        border-radius: {{ se_stts.sidebar_bdr }}px;
    }
    {%- endif -%}
    {%- if design_mode -%}
        .bee-section-sidebar {position: fixed;top: 100px;z-index: 20;}
    {%- endif -%}
</style>
{% schema %}
