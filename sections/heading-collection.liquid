      },
      {
        "type": "range",
        "id": "padding_bottom_tb_trans",
        "label": "Padding space bottom (Tablet)",
        "default": 50,
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_top_mb_trans",
        "label": "Padding space top (Mobile)",
        "default": 120,
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mb_trans",
        "label": "Padding space bottom (Mobile)",
        "default": 40,
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
      }
    ],
