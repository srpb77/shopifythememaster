{%- liquid
  assign image_fix = image_nt | image_tag
  assign se_stts = section.settings
  assign se_bks = section.blocks
  if collection.image != blank and se_stts.use_specify_image 
      assign image = collection.image 
  else 
      assign image = se_stts.image
  endif 
  assign bg_opacity = se_stts.bg_opacity | divided_by: 100.0
  -%}  
{%- capture append_style -%}
  {% if image.presentation.focal_point != '50.0% 50.0%' %}--background-position: {{ image.presentation.focal_point }}{% endif %}
{%- endcapture -%}
<style>
.is--header-transparent #bee-heading-page {
    --space-padding-top-dk: {{ se_stts.padding_top_trans }}px !important;
    --space-padding-top-tb: {{ se_stts.padding_top_tb_trans }}px !important;
    --space-padding-top-mb: {{ se_stts.padding_top_mb_trans }}px !important;
    --space-padding-bottom-dk: {{ se_stts.padding_bottom_trans }}px !important;
    --space-padding-bottom-tb: {{ se_stts.padding_bottom_tb_trans }}px !important;
    --space-padding-bottom-mb: {{ se_stts.padding_bottom_mb_trans }}px !important;
    --bg-cl: {{ se_stts.color_trans }} !important;
    --op: {{ se_stts.overlay_trans | divided_by: 100.0 }} !important;
}
{%- if se_stts.show_border -%}
.is--header-transparent .bee-section-header .bee-header__wrapper::after {
    content:"";
    border-bottom: 1px solid {{ se_stts.cl_bd_trans }};
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    opacity: {{ se_stts.border_cl_trans | divided_by: 100.0 }}
}
{%- endif -%}
</style>
{{ 'bee-heading-template.css' | asset_url | stylesheet_tag }} 
{{ 'bee-general-block.css' | asset_url | stylesheet_tag }}
<div id="bee-heading-page" class="bee-header-banner bee-pr bee-border-{{ se_stts.box_border }}{% if se_stts.parallax == true %} bee-parallax bee-parallax-bg{% endif %}{% if image != blank %} lazyloadbee{% endif %}" {% if se_stts.parallax == true %}data-parallax-beetrue{% endif %} {%- if image != blank -%} data-bgset="{{ image | image_url: width: 1 }}" data-sizes="auto"  data-optimumx="1" {%- endif -%} {% render 'style_heading', se_stts: se_stts, bg_opacity: bg_opacity, append_style: append_style %}>   
    {%- if se_bks.size > 0 -%}
    <div class="bee-page-head bee-oh bee-text-center"> 
       <div class="bee-container bee-pr">
          {%- for block in se_bks -%}  
            {%- assign bk_stts = block.settings -%}
            {%- case block.type -%}
                {%- when '1' -%} 
                  {%- assign general_block = true -%}

                  <h1 class="bee-title-head bee-bl-item bee-animation-none bee-text-bl bee-fnt-fm-{{ bk_stts.fontf }} bee-font-italic-{{ bk_stts.font_italic }} bee-uppercase-{{ bk_stts.font_uppercase }} bee-hidden-mobile-{{ bk_stts.hidden_mobile }} bee-hidden-br-mb-{{ bk_stts.remove_br_tag }} bee-text-shadow-{{ bk_stts.text_shadow }}" id="b_{{ block.id }}" {%- render 'bk_cus_style', type: 'heading_text', bk_stts: bk_stts -%}>{{ collection.title }}</h1>
                
                {%- when '2' -%}
                   {%- liquid
                   if bk_stts.content == blank
                    continue
                   endif
                   assign general_block = true -%}
                  <div class="bee-desc-head bee-bl-item bee-animation-none bee-text-bl bee-fnt-fm-{{ bk_stts.fontf }} bee-font-italic-{{ bk_stts.font_italic }} bee-uppercase-{{ bk_stts.font_uppercase }} bee-hidden-mobile-{{ bk_stts.hidden_mobile }} bee-hidden-br-mb-{{ bk_stts.remove_br_tag }} bee-text-shadow-{{ bk_stts.text_shadow }}" id="b_{{ block.id }}" {%- render 'bk_cus_style', type: 'heading_text', bk_stts: bk_stts -%}>{{ block.settings.content }}</div>
                
                {%- when '3' -%}
                  <nav class="bee-breadcrumbs" role="navigation" aria-label="breadcrumbs" style="--brc-cl: {{ bk_stts.breadcrumb_color }};--brc-cl-link: {{ bk_stts.breadcrumb_color_link }};--brc_mgb: {{ bk_stts.brc_mgb }}px;--brc-cl-trans: {{ bk_stts.breadcrumb_cl_trans }};--brc-cl-link-trans: {{ bk_stts.breadcrumb_color_link_trans }};"> 
                      <ul class="bee-breadcrumbs__list">
                         <li class="bee-breadcrumbs__item">
                              <a href="{{ routes.root_url }}" class="bee-dib">{{ 'general.breadcrumb.home' | t }}</a><span class="bee-space-db"><svg version="1.1" x="0px" y="0px" width="10px" height="10px" viewBox="0 0 22 22"><polygon points="6,20 6,2 17,11 "/></svg></span>
                          </li>
                          {%- if current_tags -%}
                          <li class="bee-breadcrumbs__item">
                            {{ collection.title | link_to: collection.url }}<span class="bee-space-db"><svg version="1.1" x="0px" y="0px" width="10px" height="10px" viewBox="0 0 22 22"><polygon points="6,20 6,2 17,11 "/></svg></span>
                          </li>
                          <li class="bee-breadcrumbs__item" aria-current="page"><span>{{ current_tags | join: ", " }}</span></li>
                          {%- else -%} 
                          <li class="bee-breadcrumbs__item" aria-current="page"><span>{{ collection.title }}</span></li>
                          {%- endif -%}
                      </ul>
                  </nav> 
                {%- when '4' -%}
                   {%- liquid
                   assign cl_des = collection.description
                   if cl_des == blank
                    continue
                   endif
                   assign general_block = true
                   -%}
                  {%- capture view_more -%}
                      {%- if bk_stts.view_more and bk_stts.viewm_txt != blank and collection.description != blank -%}<a href="#bee-desc-collection" class="bee-cl-des-viewm" data-go-id data-no-instant>{{ bk_stts.viewm_txt }}</a>{% endif -%}
                  {%- endcapture -%}
                  <div class="bee-desc-head bee-bl-item bee-animation-none bee-text-bl bee-fnt-fm-{{ bk_stts.fontf }} bee-font-italic-{{ bk_stts.font_italic }} bee-uppercase-{{ bk_stts.font_uppercase }} bee-hidden-mobile-{{ bk_stts.hidden_mobile }} bee-hidden-br-mb-{{ bk_stts.remove_br_tag }} bee-text-shadow-{{ bk_stts.text_shadow }}{% if bk_stts.design_des == "show_all" %} bee-rte{% endif %}" id="b_{{ block.id }}" {%- render 'bk_cus_style', type: 'heading_text', bk_stts: bk_stts -%}>
                      {%- if bk_stts.design_des == "show_all" -%}{{ cl_des }}{%- else -%}{{- cl_des | strip_html | truncatewords: bk_stts.length -}}<br>{{ view_more }}{%- endif -%}
                  </div>
                {%- when '5' -%}
                  {{ 'bee-top-collections.css' | asset_url | stylesheet_tag }}
                  {{ 'bee-slider-settings.css' | asset_url | stylesheet_tag }}
                  {{ 'pre_flickitybee.min.css' | asset_url | stylesheet_tag }}
                  <link href="{{ 'bee-loading.css' | asset_url }}" rel="stylesheet" media="print" onload="this.media='all'">
                  <style>
                    {%- if bk_stts.show_thumb_cl == false -%} 
                      .bee-top-collections .bee-thumb-cl{
                        display: none;
                      }
                    {%- endif -%}
                    
                  </style>
                  {%- liquid 
                    assign slide_true = false
                    assign free_scroll = true
                    if bk_stts.custom_items
                    assign free_scroll = false
                    endif
                    if bk_stts.nav_btn or bk_stts.custom_items
                      assign slide_true = true
                    endif
                    assign collection_handle = collection.handle
                    assign check_cate = false
                  -%}
                  {%- capture current -%}{%- cycle 1, 2, 3, 4, 5, 6 -%}{%- endcapture -%}
                  {%- capture html_els -%}
                    {%- assign se_sort = bk_stts.sort_collections -%}
                    {%- assign show_thumb_cl = bk_stts.show_thumb_cl -%}
                    {%- if bk_stts.source == '1' and collections.size > 0 -%}
                      {%- case se_sort -%}
                        {%- when 'products_high' or 'products_low' -%}
                          {%- assign collections = collections | sort: 'all_products_count' -%}
                        {%- when 'date' or 'date_reversed' -%}
                          {%- assign collections = collections | sort: 'published_at' -%}
                      {%- endcase -%}
                      {%- if se_sort == 'products_low' or se_sort == 'date' or se_sort == 'alphabetical' -%}
                        {%- for category in collections -%}
                          {%- if category.products.size == 0 %}{% continue %}{% endif %}
                          {%- assign check_cate = true -%}
                          <div class="bee-col-auto bee-col-item bee-cat-item{% if collection_handle == category.handle %} bee-current-cat{% endif %}"><a data-main-filters-link class="cat_link" href="{{ category.url }}">
                            {%- if show_thumb_cl -%}
                              {%- assign image = category.image | default: category.products.first.featured_image -%} 
                              {% if image != blank %}
                                <div class="bee_ratio bee-thumb-cl" >
                                  <img class="lazyloadbee bee-lz--fadeIn bee-obj-eff" data-src="{{ image | image_url: width: 1 }}" data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}">
                                  <span class="lazyloadbee-loader is-bg-img" style="background: url({{ image | image_url: width: 1 }});"></span>     
                                </div> 
                              {% else %}
                                <div class="bee_ratio bee-thumb-cl" >
                                  {{ 'collection-' | append: current | placeholder_svg_tag: 'bee-placeholder-svg bee-obj-eff' }}  
                                </div>
                              {% endif %}
                            {%- endif -%}
                            <span>{{ category.title }}</span></a></div>
                        {%- endfor -%}
                      {%- else -%}
                         {%- for category in collections reversed -%}
                            {%- if category.products.size == 0 %}{% continue %}{% endif %}
                            {%- assign check_cate = true -%}
                            <div class="bee-col-auto bee-col-item bee-cat-item{% if collection_handle == category.handle %} bee-current-cat{% endif %}"><a class="cat_link dib" href="{{ category.url }}">
                              {%- if show_thumb_cl -%}
                                {%- assign image = category.image | default: category.products.first.featured_image -%} 
                                {% if image != blank %}
                                <div class="bee_ratio bee-thumb-cl">
                                  <img class="lazyloadbee bee-lz--fadeIn bee-obj-eff" data-src="{{ image | image_url: width: 1 }}" data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}">
                                  <span class="lazyloadbee-loader is-bg-img" style="background: url({{ image | image_url: width: 1 }});"></span>     
                                </div>
                                {% else %}
                                  <div class="bee_ratio bee-thumb-cl" >
                                    {{ 'collection-' | append: current | placeholder_svg_tag: 'bee-placeholder-svg bee-obj-eff' }}  
                                  </div>
                                {% endif %}
                              {%- endif -%}
                              <span>{{ category.title }}</span></a></div>
                         {%- endfor -%}
                      {%- endif -%}
                    {%- elsif bk_stts.source == '2' and bk_stts.collection_list != blank -%}
                      {%- for category in bk_stts.collection_list -%}
                        {%- assign check_cate = true -%}
                        <div class="bee-col-auto bee-col-item bee-cat-item{% if collection_handle == category.handle %} bee-current-cat{% endif %}"><a class="cat_link dib" href="{{ category.url }}">
                              {%- if show_thumb_cl -%}
                                {%- assign image = category.image | default: category.products.first.featured_image -%} 
                                {% if image != blank %}
                                <div class="bee_ratio bee-thumb-cl">
                                  <img class="lazyloadbee bee-lz--fadeIn bee-obj-eff" data-src="{{ image | image_url: width: 1 }}" data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}">
                                  <span class="lazyloadbee-loader is-bg-img" style="background: url({{ image | image_url: width: 1 }});"></span>     
                                </div>
                                {% else %}
                                  <div class="bee_ratio bee-thumb-cl" >
                                    {{ 'collection-' | append: current | placeholder_svg_tag: 'bee-placeholder-svg bee-obj-eff' }}  
                                  </div>
                                {% endif %}
                              {%- endif -%}
                              <span>{{ category.title }}</span></a></div>
                      {%- endfor -%}
                    {%- endif -%}
                  {%- endcapture -%}
                  {% if collections.size > 0 and check_cate %}
                     <div class="bee-top-collections bee-hidden-mobile-{{ bk_stts.hidden_mobile }} bee-nav-{{ bk_stts.nav_btn }} {% if bk_stts.show_thumb_cl -%}bee-custom-items-{{ bk_stts.custom_items }} {%- endif %} bee_ratio1_1 bee_position_8 bee_cover is-col-mb-{{ bk_stts.col_mb }}" {% if bk_stts.custom_items and bk_stts.show_thumb_cl -%}style="--col-dk:{{ bk_stts.col_dk }};--col-tb:{{ bk_stts.col_tb }};--col-mb:{{ bk_stts.col_mb }};"{%- endif -%}>
                        <div class="bee-top-list-collections bee-row bee-g-0 bee-align-items-center bee-justify-content-center bee-fnt-fm-{{ bk_stts.fontf }} bee-font-italic-{{ bk_stts.font_italic }} bee-uppercase-{{ bk_stts.font_uppercase }} bee-flickity-slider bee-slider-btn-style-simple bee-slider-btn-none bee-slider-btn-small bee-slider-btn-vi-always flickitybee" data-flickitybee-js='{"isSimple": true, "cellAlign": "center", "freeScroll": {{ free_scroll }}, "initialIndex": ".bee-current-cat", "setPrevNextButtons": {{ slide_true }}, "arrowIcon": "1", "imagesLoaded": 0,"adaptiveHeight": 0, "contain": 1, "groupCells": "100%", "dragThreshold" : 5, "wrapAround": false,"prevNextButtons": {{ slide_true }},"percentPosition": 0,"pageDots": false, "pauseAutoPlayOnHover" : true }' style="--text-cl-trans:{{ bk_stts.text_cl_trans }};--text-cl:{{ bk_stts.text_cl }};--text-fs:{{ bk_stts.text_fs }}px;--text-fw:{{ bk_stts.text_fw }};--text-lh:{{ bk_stts.text_lh }}px;--text-ls:{{ bk_stts.text_ls }}px;--space-item:{{ bk_stts.space_item }}px;">{{ html_els }}</div>
                      </div>  
                  {%- endif -%}
            {%- endcase -%} 
          {%- endfor -%}
       </div>
    </div> 
    {%- endif -%}
    {%- if general_block -%}
        {{ 'bee-general-block.css' | asset_url | stylesheet_tag }}
    {%- endif -%}
</div>  
{% schema %}
