        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_top_tb",
        "label": "Padding space top (Tablet)",
        "default": 50,
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_tb",
