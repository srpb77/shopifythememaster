    "name": "Collection heading",
    "class": "page_section_heading bee_tp_flickity",
    "max_blocks": 4,
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "+ Background image"
      },
      {
        "type": "checkbox",
        "id": "use_specify_image",
        "label": "Specify other image for particular page",
        "info": "Use collection image for 'Collection' page",
        "default": true
