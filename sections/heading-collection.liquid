        "label": "Padding space top (Mobile)",
        "default": 50,
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "label": "Padding space bottom (Mobile)",
        "default": 50,
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "mgb_mb",
        "label": "Margin space bottom (Mobile)",
        "default": 50,
        "min": 0,
        "max": 100,
        "step": 1,
