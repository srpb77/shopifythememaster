{% if product_des == "1" or  product_des == "7" %}
	<div data-countdown-wrap class="bee-product-countdown bee-pr-countdown1 bee-pe-none">
	  	<span class="bee-pr-countdown" data-countdown-bee data-date="{{countdown}}">
		  <span class="bee-countdowm-child bee-countdown-days">
		      <span class="bee-cd-number">%-D</span>
		      <span class="bee-cd-text">%!D:{{ "products.product_card.countdown_text.day" | t }},{{ "products.product_card.countdown_text.day_plural" | t }};</span>
		  </span>
		  <span class="bee-countdowm-child bee-countdown-hours">
		      <span class="bee-cd-number">%H</span> 
		      <span class="bee-cd-text">%!H:{{ "products.product_card.countdown_text.hr" | t }},{{ "products.product_card.countdown_text.hr_plural" | t }};</span>
		  </span>
		  <span class="bee-countdowm-child bee-countdown-min">
		      <span class="bee-cd-number">%M</span> 
		      <span class="bee-cd-text">%!M:{{ "products.product_card.countdown_text.min" | t }},{{ "products.product_card.countdown_text.min_plural" | t }};</span>
		  </span>
		  <span class="bee-countdowm-child bee-countdown-sec">
		      <span class="bee-cd-number">%S</span> 
		      <span class="bee-cd-text">%!S:{{ "products.product_card.countdown_text.sec" | t }},{{ "products.product_card.countdown_text.sec_plural" | t }};</span>
		  </span>
	  	</span>
	</div>
{% else %}
	<div data-countdown-wrap class="bee-product-countdown bee-pr-countdown2 bee-pe-none">
