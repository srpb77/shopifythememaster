		<span class="bee-pr-countdown" data-countdown-bee data-date="{{countdown}}">
		  <span class="bee-countdowm-child bee-countdown-days">
		      <span class="bee-cd-number">%-D</span>
		  </span>
		  <span class="bee-countdowm-child bee-countdown-hours">
		      <span class="bee-cd-number">%H</span> 
		  </span>
		  <span class="bee-countdowm-child bee-countdown-min">
		      <span class="bee-cd-number">%M</span> 
		  </span>
		  <span class="bee-countdowm-child bee-countdown-sec">
		      <span class="bee-cd-number">%S</span> 
		  </span>
	  	</span>
	</div>
{% endif %}